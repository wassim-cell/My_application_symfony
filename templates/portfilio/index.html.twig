



{% block body %}
{% include 'header.html.twig' %}
<br>
<br>
<!-- Portfolio Grid-->
<title> Wassim/portfilio </title>
    <section class="page-section bg-light" id="portfolio">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Portfolio</h2>
                <h3 class="section-subheading text-muted">You can Buy any Watch on my website</h3>
            </div>
            <div class="row">
            
                {% for prod in product %}
                <div class="col-lg-4 col-sm-6 mb-4">
                    <!-- Portfolio item 1-->
                    <div class="portfolio-item">
                       
                            
                        <a href="{{ path('produit.detaill' ,{id: prod.id }) }}"  class="portfolio-link" data-bs-toggle="modal" >  
                           
                            <img class="img-fluid" style="width:400px;" src="{{ asset('uploades/') ~ prod.imageFile }}" alt="..." />
                        </a>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading">{{ prod.name }}</div>
                            <div class="portfolio-caption-subheading text-muted">{{ prod.message }}</div>
                            <a href="{{ path('produit.detaill' ,{id: prod.id }) }}" style="color: #ffc800;
                            text-decoration: underline;" >Detaille</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
              
            </div>
        </div>
    </section>

    
        {% include "footer.html.twig" %}
        
{% endblock %}
